<?xml version="1.0" encoding="utf-8"?>
<com.skydoves.elasticviews.ElasticLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profilebackground" />

    <LinearLayout
        android:id="@+id/asdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="100dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <com.skydoves.elasticviews.ElasticImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />

        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gametext"
                android:gravity="center_horizontal"
                android:text="Enter your name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:drawableLeft="@drawable/ic_mood_black_24dp"
                android:drawablePadding="20dp"
                android:fontFamily="@font/gametext"
                android:gravity="center"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gametext"
                android:gravity="center_horizontal"
                android:text="Enter your email"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="20dp"
                android:fontFamily="@font/gametext"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="#000" />

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/submitProfile"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/submitbtn" />
        </LinearLayout>

    </LinearLayout>
</com.skydoves.elasticviews.ElasticLayout>