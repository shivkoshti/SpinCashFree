<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    tools:context=".Login">

    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo"
        android:transitionName="imageMain" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="#BEFFFFFF"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/textHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gametext"
            android:gravity="center"
            android:text="Enter Mobile Number"
            android:textColor="#000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/gametext"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="15dp"
            android:textColor="#000" />

    </LinearLayout>


    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/loginNext"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/liner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/nextbtn"
        android:textSize="17sp"
        app:button_duration="250"
        app:button_scale="0.87" />


    <com.skydoves.elasticviews.ElasticButton
        android:id="@+id/settingPopup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:background="@drawable/settingbtn"
        app:button_duration="250"
        app:button_scale="0.87" />


    <com.skydoves.elasticviews.ElasticButton
        android:id="@+id/leaderBoard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:background="@drawable/awardbtn"
        app:button_duration="250"
        app:button_scale="0.87" />


</RelativeLayout>