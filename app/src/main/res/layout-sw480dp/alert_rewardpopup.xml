<?xml version="1.0" encoding="utf-8"?>
<com.skydoves.elasticviews.ElasticLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/rewardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rewardblank" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            android:gravity="center"
            android:text="Tap image to spin again."
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:snowflakeAlphaMax="255"
        app:snowflakeAlphaMin="50"
        app:snowflakeAngleMax="5"
        app:snowflakeImage="@drawable/dallarrain"
        app:snowflakeSizeMax="32dp"
        app:snowflakeSizeMin="18dp"
        app:snowflakeSpeedMax="25"
        app:snowflakeSpeedMin="25"
        app:snowflakesAlreadyFalling="true"
        app:snowflakesFadingEnabled="true"
        app:snowflakesNum="150" />

